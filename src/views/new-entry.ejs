<!DOCTYPE html>
<html lang="en">

<head>
    <% include partials/header%>
    <title>New book</title>
</head>

<body>
    <% include partials/navigation %>
    <div class="container p-4">
        <h1>New book</h1>
        <form method="POST" action="/new-entry" class="card card-body formularios" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" name="title" id="title" placeholder="Entry a new title" autfocus
                    required>
            </div>

            <div class="form-group">
                <label for="author">Author</label>
                <input type="text" class="form-control" name="author" id="author" placeholder="Author" required>
            </div>

            <div class="form-group">
                <label class="image">Select image</label>
                <input type="file" class="form-control-file" id="image" name="image" required/>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="3" class="form-control"
                    placeholder="Description"></textarea>
            </div>

            <div class="select">
                <label for="StatusOfBook">Status of book</label>
            </div>
            <div class="form-check select mb-3 mt-1">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="status" id="inlineRadio1" value="1" required>
                    <label class="form-check-label" for="inlineRadio1">New</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="status" id="inlineRadio2" value="0" required>
                    <label class="form-check-label" for="inlineRadio2">Used</label>
                </div>
            </div>
            <input type="submit" value="Save book" class="btn btn-primary">
            <% if (typeof succesfull != 'undefined') { %>
            <div class="alert alert-success mt-3" role="alert">
                Book saved successfully.
            </div>
            <%}%>
            <% if (typeof error != 'undefined') { %>
            <div class="alert alert-danger mt-3" role="alert">
                The book was not saved.
            </div>
            <%}%>
        </form>
    </div>
</body>

</html>