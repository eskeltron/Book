<!DOCTYPE html>
<html lang="en">

<head>
    <% include partials/header %>
    <title>Sign up</title>
</head>

<body>
    <% include partials/navigation %>
    <div class="container p-4">

        <div class="card">
            <div class="card-header" style="background-color: rgba(163, 163, 163, 0.700)">
                <h2>Profile</h2>
            </div>
            <div class="card-body" style="background-color: rgba(163, 163, 163, 0.500)">
                <%if (typeof user != 'undefined'){%>
                <h3><strong>Name</strong>:<br /> </h3>
                <h4><%= user.username %></h4>
                <h3><strong>Email</strong>:<br /></h3>
                <h4><%= user.email %></h4>
                <%}%>
                <%if (userLog){%>
                <form action="/logout" method="POST">
                    <button type="submit" class="btn btn-outline-dark">Logout</button>
                </form>
                <%}%>
            </div>
        <%if (typeof purchasedBooks != 'undefined'){%>
                <div class="purchasedBooks">

                </div>
                <%}%>
    </div>
</body>

</html>